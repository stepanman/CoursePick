@model IEnumerable<CoursePickData.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<style>
    main {
        display: grid;
        grid-template-rows: 1fr 9fr;
    }

    main > h1 {
        place-self: center center;
    }

    main > section {
        align-items: flex-start;
        justify-content: center;
        gap: 20px;
    }

    main > section > a {
        all: unset;
        display: flex;
        flex-direction: column;
        align-items: center;
        color: var(--main-text-color);
        background-color: var(--lighter-main-bg-color);
        border-radius: 10%;
    }

    main > section > a:hover {
        background-color: var(--secondary-bg-color);
        color: var(--secondary-text-color);
        transition: all 0.4s ease-out;
    }

    img{
        width: 150px;
        height: 200px;
    }
</style>

<h1>Courses</h1>
<section class="flex flex-wrap">
    @foreach (var course in Model)
    {
        <a asp-action="Details" asp-route-id="@course.Id">
            <h1>@course.Title</h1>
            <h2>Duration: @course.Duration.TotalHours hours</h2>
            <h2>Max Students: @course.MaxStudents</h2>
        </a>
    }
</section>
